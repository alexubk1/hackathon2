{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="titre">Team : GAULE !</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset">
                <table class="toto">
                    <tbody class="equipe">

                    {% for gladiator in gaulois %}
                        <tr>
                            <td class="gladiator">{{ gladiator.name }}</td>
                        </tr>
                        <tr>
                            <td>{% if gladiator.captain %}C'est moi le boss{% else %}Je suis soumis{% endif %}</td>
                        </tr>
                        <tr>
                            <td>Role : {{ gladiator.job }}</td>
                        </tr>
                        <tr>
                            <td>Arme : {{ gladiator.weapon }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="col-md-6">
                <img src="{{ asset('http://www.gifimili.com/gif/2018/02/asterix-et-obelix-sur-un-bateau.gif') }}" alt="astérix et obélix sur un bateau" />
            </div>
        </div>
    </div>
    <ul>
        <li>
            <a class ="engagez"href="{{ path('gladiator_index') }}">Engagez-vous....qu'ils disaient!</a>
        </li>
    </ul>
{% endblock %}
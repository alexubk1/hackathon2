{% extends 'base.html.twig' %}

{% block body %}
    <h1>Team : Sparte!</h1>


    <div class="row">
        <div class="col-md-6">
            <table>
                <tbody>

                {% for gladiator in spartes %}
                    <tr>
                        <td><a href="{{ path('spartes_index') }}">{{ gladiator.name }}</td>
                    </tr>
                    <tr>
                        <td>{% if gladiator.captain %}C'est moi le boss{% else %}Je suis soumis{% endif %}</td>
                    </tr>
                    <tr>
                        <td>Role : {{ gladiator.job }}</td>
                    </tr>
                    <tr>
                        <td>Arme : {{ gladiator.weapon }}</td>
                    </tr>
                {% endfor %}


                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <img src="{{ asset('https://media.giphy.com/media/J3WUquDgqRpss/giphy.gif') }}" alt="sparte" />
        </div>

    </div>

    <ul>
        <li>
            <a href="{{ path('gladiator_index') }}">Engagez-vous....qu'ils disaient!</a>
        </li>

    </ul>

{% endblock %}
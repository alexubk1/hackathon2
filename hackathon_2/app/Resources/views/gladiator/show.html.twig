{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gladiator</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gladiator.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gladiator.name }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ gladiator.age }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ gladiator.job }}</td>
            </tr>
            <tr>
                <th>Weapon</th>
                <td>{{ gladiator.weapon }}</td>
            </tr>
            <tr>
                <th>Captain</th>
                <td>{% if gladiator.captain %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gladiator_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gladiator_edit', { 'id': gladiator.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
